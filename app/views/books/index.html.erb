    <ul><% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
